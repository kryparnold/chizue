// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model WordGame {
    id          String   @id
    playerId    String   @default("")
    guildId     String
    letter      String
    limit       Int      @default(40)
    randomWords String[] @default([])
    createdAt   DateTime @default(now())
    players     Player[]
    mode        GameMode
    locale      Locales
    type        GameType @default(WordGame)
    words       String[]
}

model CountingGame {
    id           String   @id
    playerId     String   @default("")
    guildId      String
    multiplier   Int      @default(1)
    createdAt    DateTime @default(now())
    recentNumber Int      @default(1)
    type         GameType @default(CountingGame)
}

model Player {
    id       String     @id
    score    Float      @default(0)
    scores   Json       @default("{}")
    WordGame WordGame[]
}

enum GameType {
    WordGame
    CountingGame
}

enum Locales {
    Turkish
    English
}

enum GameMode {
    Normal
    Endless
}
